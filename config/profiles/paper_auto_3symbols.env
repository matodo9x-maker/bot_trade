# Paper trading on real market data (NO real orders) with AUTO symbol selection
BOT_MODE=paper
BOT_SYMBOLS=AUTO
BOT_CYCLE_SEC=300
BOT_POLICY=hybrid

# Universe filters
UNIVERSE_TARGET_SYMBOLS=3
UNIVERSE_REFRESH_MIN=360
UNIVERSE_MIN_QUOTE_VOL_USDT=20000000
UNIVERSE_MIN_DAILY_ATR_PCT=0.01
UNIVERSE_MAX_CORR=0.85
UNIVERSE_LOOKBACK_DAYS=30
UNIVERSE_ATR_PERIOD=14
UNIVERSE_MAX_CANDIDATES_BY_LIQ=80
UNIVERSE_EXCLUDE_BASES=USDC,BUSD,TUSD,FDUSD,DAI,USDP,USDE,USTC

# Risk small-account friendly
PAPER_EQUITY_USDT=100
PAPER_FREE_USDT=100
RISK_PER_TRADE_PCT=0.25
LEVERAGE=3
MAX_OPEN_POSITIONS=2
MAX_EXPOSURE_PCT_PER_SYMBOL=20

# Guards
MAX_CONSECUTIVE_LOSSES=3
COOLDOWN_SEC=7200

# Telegram optional
TELEGRAM_ENABLED=0

# Exchange data source (public endpoints should work)
EXCHANGE=binance
EXCHANGE_TESTNET=0
